{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: As Module",
            // Runs as a module so that imports don't need to be handled specially
            "type": "python",
            "request": "launch",
            // Needs the Command Variable extension from rioj7
            "module": "${command:extension.commandvariable.file.relativeFileDotsNoExtension}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}